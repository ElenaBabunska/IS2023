@model List<_193089.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Ticket </a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4"> 
            <div class="card" style="width: 20rem; height: 33rem;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 16rem" alt="Image for ticket!" />
            

                <div class="card-body">
                    <h3 class="card-title">@item.MovieName</h3>
                    <p class="card-text">@item.MovieDescription</p>
                    <h5> Category: @item.MovieCategory</h5>

                    <h6> Price: @item.MoviePrice</h6>

                    <h6> Date: @item.Date</h6>
                </div>

                <div class="card-footer">
          <a class="btn btn-secondary" asp-controller="Tickets" asp-action="AddToCart" asp-route-id ="@item.Id">Add to Cart </a>
                     <a class="btn btn-secondary" asp-controller="Tickets" asp-action="Edit" asp-route-id ="@item.Id">Edit </a>
                      <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </div>
            </div>

        </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>


