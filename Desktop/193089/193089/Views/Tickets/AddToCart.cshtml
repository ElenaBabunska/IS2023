@model _193089.Domain.DTO.AddToCartDto

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add to Cart";
}

<h1>Add to Shopping Cart</h1>

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddToCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieName"></label>
                <input disabled class="form-control" asp-for="SelectedTicket.MovieName" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input class="form-control" asp-for="Quantity" />
            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

