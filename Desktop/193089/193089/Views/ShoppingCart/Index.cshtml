@model _193089.Domain.DTO.ShoppingCartDto


<div class="container">
    <div class="row m-4">
        <a asp-controller="ShoppingCart" asp-action="Order" class="btn btn-info">Order now</a>
    </div>

    <div class="row m-4">
        <table class="table">
            <thead>
                <tr>

                    <th scope="col"></th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Ticket Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ticketsInCarts.Count; i++)
                {
                    var item = Model.ticketsInCarts[i];

                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@item.Ticket.MovieName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Ticket.MoviePrice</td>
                        <td><a asp-controller="ShoppingCart" asp-action="DeleteFromSC" asp-route-id="@item.Ticket.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }

            </tbody>

            <tfoot>
                <tr>

                    <th scope="col">Total Price:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>

    </div>


</div>